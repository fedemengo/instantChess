html
    head
        link(href='style/Mukta-Mahee.css', rel='stylesheet')
        link(href='style/bootstrap.min.css', rel='stylesheet')
        link(href='style/style.css', rel='stylesheet')
        script(type='text/javascript', src='js/jquery.min.js')
        script(type='text/javascript', src="js/bootstrap.min.js")
        script(type='text/javascript', src='js/socket.io.js')
        script(type='text/javascript', src='js/interact.min.js')
        script(type='text/javascript', src='js/drag.js')
        script(type='text/javascript', src='js/update.js')
    body(style="padding-top: 50px")
        .main-div
            div(style='text-align: center; float: left; width: 400px;')
                h1 Play!
                h3#player-color #{color} player
                div(id=color + "-board")
                    each row in [0, 1 , 2, 3, 4, 5, 6, 7]
                        each col in [0, 1 , 2, 3, 4, 5, 6, 7]
                            if status[row][col] != null
                                div.piece(class=status[row][col].type + status[row][col].color class=(status[row][col].color === color[0] ? "draggable" : "") 
                                    style="left:" + ((color === "white" ? col : 7 - col)) * 45 + "px; top:" + ((color === "white" ? row : 7 - row)) * 45 + "px"
                                    col=String.fromCharCode(97 + col) row=8 - row color=status[row][col].color)
            .moves
                h3#move #{turn} move
                ol#list
                    each entry, index in history
                        if index % 2 !== 0
                            <li>#{history[index-1]}, #{history[index]}</li>
                        else if !history[index+1]
                            <li>#{history[index]}</li>
        .main-div
            .alert.alert-info
                a#url()