html
    head
        link(href='https://fonts.googleapis.com/css?family=Mukta+Mahee', rel='stylesheet')
        link(href='style/style.css', rel='stylesheet', type='text/css', media='all')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        script(type='text/javascript', src='js/jquery.min.js')
        script(type='text/javascript', src="js/bootstrap.min.js")
        script(type='text/javascript', src='js/socket.io.js')
        script(type='text/javascript', src='js/interact.min.js')
        script(type='text/javascript', src='js/drag.js')
        script(type='text/javascript', src='js/update.js')
    body
        .main-div
            div(style='text-align: center; float: left; width: 400px;')
                h1 Play!
                h3#player-color #{color} player
                div(id=color + "-board")
                    each row in [0, 1 , 2, 3, 4, 5, 6, 7]
                        each col in [0, 1 , 2, 3, 4, 5, 6, 7]
                            if status[row][col] != null
                                if color === "white"
                                    if status[row][col].color === color[0]
                                        div.draggable.piece(class=status[row][col].type + status[row][col].color
                                                            style="left:" + col*45 + "px; top:" + row*45 + "px"
                                                            col=String.fromCharCode(97 + col) row=8 - row color=status[row][col].color)
                                    else
                                        div.piece(class=status[row][col].type + status[row][col].color
                                                            style="left:" + col * 45 + "px; top:" + row * 45 + "px"
                                                            col=String.fromCharCode(97 + col) row=8 - row color=status[row][col].color)
                                else
                                    if status[row][col].color === color[0]
                                        div.draggable.piece(class=status[row][col].type + status[row][col].color
                                                            style="left:" + (7 - col) * 45 + "px; top:" + (7 - row) * 45 + "px"
                                                            col=String.fromCharCode(97 + col) row=8 - row color=status[row][col].color)
                                    else
                                        div.piece(class=status[row][col].type + status[row][col].color
                                                            style="left:" + (7 - col) * 45 + "px; top:" + (7 - row) * 45 + "px"
                                                            col=String.fromCharCode(97 + col) row=8 - row color=status[row][col].color)
            .moves
                h3#move White move
                ol#list
        .main-div
            .alert.alert-info
                a#url(href='#', data-dismiss='alert')